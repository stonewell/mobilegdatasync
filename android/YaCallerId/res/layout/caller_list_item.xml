<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="50dip"
	android:orientation="horizontal" android:gravity="center_vertical">

	<ImageView android:id="@+id/list_item_img"
		android:layout_width="64dip" android:layout_height="64dip"
		android:layout_gravity="right" android:paddingLeft="5dip" />

	<TextView android:id="@+id/list_item_text"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:lines="1" android:layout_marginLeft="20dip" />

</LinearLayout>