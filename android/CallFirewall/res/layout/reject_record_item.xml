<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/vw1" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:background="@drawable/list_item_bg">

	<ImageView android:id="@+id/reject_record_item_img"
		android:layout_width="32dip" android:layout_margin="6dip"
		android:layout_height="32dip" android:layout_gravity="center_vertical" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_marginLeft="5dip">

		<TextView android:id="@+id/reject_record_item_text_1"
			android:textSize="14sp" android:textStyle="bold"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textColor="@color/white" android:gravity="center_vertical"
			android:singleLine="true" android:ellipsize="marquee" />

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_marginLeft="5dip">

			<TextView android:id="@+id/reject_record_item_text_2"
				android:textSize="14sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="@color/white"
				android:gravity="center_vertical" />

			<TextView android:id="@+id/reject_record_item_text_3"
				android:textSize="14sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="@color/white"
				android:gravity="center_vertical" android:layout_marginLeft="10dip" />
		</LinearLayout>

		<TextView android:id="@+id/reject_record_item_text_4"
			android:textSize="12sp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="@color/white"
			android:gravity="center_vertical" android:singleLine="true"
			android:ellipsize="marquee" android:layout_marginLeft="5dip" />

	</LinearLayout>

</LinearLayout>