<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/speed_dial"  android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
	android:orientation="vertical" android:layout_weight="1">
	<LinearLayout android:orientation="horizontal"
	android:layout_marginTop="6dp"
	android:layout_marginBottom="0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/speed_one" android:layout_width="100dp"
			android:layout_height="wrap_content" />

		<Button android:id="@+id/speed_two" android:layout_width="100dp"
			android:layout_height="wrap_content" />

		<Button android:id="@+id/speed_three" android:layout_width="100dp"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
	android:layout_marginTop="0dip"
	android:layout_marginBottom="0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/speed_four" android:layout_width="100dp"
			android:layout_height="wrap_content" />

		<Button android:id="@+id/speed_five" android:layout_width="100dp"
			android:layout_height="wrap_content" />

		<Button android:id="@+id/speed_six" android:layout_width="100dp"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
