<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vw1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4px"
    android:orientation="horizontal">    
   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:orientation="horizontal">

		<ImageView android:id="@+id/image_two_line_item_1_img"
        	   android:layout_width="32px"
	           android:layout_margin="6px"
	           android:layout_height="32px"
	           android:layout_gravity="center_vertical"/>
       
        <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="40dip"
        	android:orientation="vertical"> 
        		
	        <TextView android:id="@+id/image_two_line_item_1_text_1"
	            android:textSize="16px"
	            android:textStyle="bold"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
	            android:gravity="center_vertical"
	    		android:paddingRight="6dip"/>
	    		
	    	<TextView android:id="@+id/image_two_line_item_1_text_2"
	            android:textSize="14px"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
	            android:gravity="center_vertical"
    			android:paddingRight="6dip"/>
    	</LinearLayout>
    	
    	<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="40dip"
        	android:orientation="vertical">
        	
        	<TextView android:id="@+id/image_two_line_item_1_text_3"
	            android:textSize="14px"
	            android:textStyle="bold"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
	            android:gravity="center_vertical"
	            android:paddingLeft="10dip"
	    		android:paddingRight="6dip"/>
	    </LinearLayout>
	    
    </LinearLayout>
</LinearLayout>