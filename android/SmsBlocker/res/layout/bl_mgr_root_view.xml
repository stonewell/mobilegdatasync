<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    
    >
	
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        >
        
        <TextView android:id="@+id/blName"
        		  android:layout_width="fill_parent"
            	  android:layout_height="wrap_content"
            	  android:text="@string/phone_number_list_string"
                  android:layout_weight="1.0"
                  android:layout_gravity="left|center_vertical"
            	  />
         
         <Button android:id="@+id/add_number_btn" 
        		 	  android:layout_width="60dip"
        		 	  android:layout_height="40dip"
        		 	  android:clickable="true"
        		 	  android:text="@string/btn_add"
        		 	  />
        
        <!--  -->ImageButton  android:id="@+id/search_number_btn" 
        		 	  android:layout_width="36dip"
        		 	  android:layout_height="36dip"
        		 	  android:clickable="true"
        		 	  android:background="@drawable/my_search_btn_selector_background"
  				      android:layout_marginRight="90dip"
        		 	  /> 
          	  
        
	         
    </LinearLayout>
    
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_weight="1.0"
        >
        
        <ScrollView android:id="@+id/bl_root_mgr_user_guide_text"
        			android:layout_width="fill_parent"
            	  	android:layout_height="wrap_content"
            	  	>
	        
	        <LinearLayout android:layout_width="fill_parent"
        		android:layout_height="45dip"
        		android:orientation="vertical"
        		android:gravity="center_horizontal"
        		>
	        
		        <TextView android:layout_width="wrap_content"
		            	  android:layout_height="wrap_content"
		            	  android:paddingLeft="20dip"
		            	  android:textSize="14sp"
		            	  android:textColor="@color/white"
		            	  android:text="@string/bl_root_mgr_user_guide_string_1" 
		          		  android:textStyle="normal"
		          		  android:gravity="left"
		            	  />
		          
		         <TextView android:layout_width="fill_parent"
		            	  android:layout_height="wrap_content"
		            	  android:paddingLeft="20dip"
		            	  android:textSize="14sp"
		            	  android:textColor="@color/nortoncolor"
		            	  android:text="@string/bl_root_mgr_user_guide_string_2" 
		          		  android:textStyle="normal"
		          		  android:gravity="left"
		            	  />
	         </LinearLayout>
	    </ScrollView>
	    
         	    	        
        <ListView android:id="@+id/exist_mgr_bl_list"
   		  	  	  android:layout_width="fill_parent"
   		          android:layout_height="wrap_content"
  				  android:cacheColorHint="@color/transparent"
  				  
   		          />             
    </LinearLayout>
    
    <TextView android:id="@+id/add_bl_number_edit_guide_text"
        		  android:layout_width="wrap_content"
            	  android:layout_height="fill_parent"
            	  android:paddingBottom="10dip"
            	  android:textSize="14sp"
            	  android:textColor="@color/nortoncolor"
            	  android:text="@string/hold_down_to_edit" 
          		  android:textStyle="normal"
          		  android:layout_weight="1.0"
            	  />
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        >
        
        <!--  -->TextView android:id="@+id/add_bl_number_edit_guide_text"
        		  android:layout_width="wrap_content"
            	  android:layout_height="wrap_content"
            	  android:paddingBottom="10dip"
            	  android:textSize="14sp"
            	  android:textColor="@color/nortoncolor"
            	  android:text="@string/hold_down_to_edit" 
          		  android:textStyle="normal"
            	  />    
        
        <ImageView android:id="@+id/norton_logo_image_view"
        	   android:layout_width="85dip"
	           android:layout_height="35dip"
	           android:src="@drawable/norton_logo"
	         
	           />
       
	           
	</LinearLayout>
	
</LinearLayout>