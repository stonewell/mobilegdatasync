<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:orientation="vertical"
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent"
   	android:background="@drawable/background"
   	android:gravity="center_horizontal"
   	>

	<ScrollView  android:orientation="vertical"
			     android:layout_width="fill_parent"
			   	 android:layout_height="fill_parent"
			   	 android:layout_weight="1.0"
			   	 
			   	 >

	   	<LinearLayout android:layout_width="fill_parent" 
	       	android:layout_height="fill_parent"
	       	android:orientation="vertical"
	       	android:gravity="center_horizontal"
	       	>
	   	
	   		<LinearLayout android:layout_width="fill_parent" 
	       		android:layout_height="wrap_content"
	       		android:padding="10dip"
	       		android:orientation="vertical"
	       		>
	       		
	       		<TextView android:id="@+id/new_advance_scene_edit_name_text"
	        		  android:layout_width="fill_parent"
	            	  android:layout_height="wrap_content"
	                  android:textSize="16sp"
	                  android:textStyle="bold"
	                  android:layout_gravity="center_vertical" 
	                  android:text="@string/new_adv_scene_name_string"/>
	       		          
	        	<EditText android:id="@+id/new_advance_scene_edit_name_editor"
	            	  android:layout_width="fill_parent"
	                  android:layout_height="wrap_content"
	                  android:layout_gravity="center_vertical" 
	                  android:singleLine="true"
	                  android:maxLength="15"
	                  />
	 
	    	</LinearLayout>
	   	
		    
		    <LinearLayout android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content"
	       		android:baselineAligned="false"
	       		android:orientation="horizontal"
	       		android:gravity="center_horizontal">
					  
				<CheckBox android:id="@+id/new_scene_all_contact_check_box"
                    android:text="@string/advance_scene_apply_contract"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      />
				      
				<CheckBox android:id="@+id/new_scene_all_unknown_call_check_box"
                    android:text="@string/advance_scene_apply_unknown_call"
				      android:layout_width="wrap_content"
				      android:layout_height="wrap_content"
				      />     
	       	
	    	</LinearLayout>
	    	
	    	<LinearLayout android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:paddingLeft="10dip"
			        android:paddingRight="10dip"
			        android:paddingBottom="10dip"
			        android:gravity="center"
	        		>
			       		 	 	 
		       	<TextView android:id="@+id/new_advance_scene_edit_reply_sms_list_text"
			        		  android:layout_width="fill_parent"
			            	  android:layout_height="wrap_content"
			                  android:textSize="16sp"
			                  android:text="@string/new_adv_scene_reply_sms_list_string"
			                  android:layout_marginLeft="32dip"
			                  />
			                  
			    <ImageButton  android:id="@+id/new_advance_scene_add_new_reply_sms_btn" 
	        		 	  android:layout_width="36dip"
	        		 	  android:layout_height="36dip"
	        		 	  android:clickable="true"
	        		 	  android:background="@drawable/my_add_btn_selector_background"
	        		 	  android:layout_marginRight="40dip" 
	        		 	  />
	        		 	  
		    </LinearLayout>
		
		       	
		    <LinearLayout android:layout_width="fill_parent" 
	       		android:layout_height="fill_parent"
	       		android:paddingLeft="10dip"
	       		android:paddingRight="10dip"
	       		android:paddingBottom="10dip"
	       		android:orientation="vertical"
	       		android:layout_weight="1.0"
	       		>	
	       		
	       		 <ListView android:id="@+id/new_advance_scene_reply_sms_list"
	   		  	  	  android:layout_width="fill_parent"
	   		  	  	  android:layout_height="fill_parent"
	   		  	  	  android:cacheColorHint="@color/transparent"
	    		      />
	      
		   	</LinearLayout>	
		      
		
		 	
		 </LinearLayout>
	 
	 </ScrollView>
	 
	 <LinearLayout android:layout_width="fill_parent"
		        android:layout_height="60dip"
		        android:orientation="horizontal"
		        android:background="@color/lightgray"
		        android:gravity="center"   
        		> 
        
	        <Button android:id="@+id/new_advance_scene_ok_btn"
                android:text="@string/btn_ok"
	        		android:layout_width="150dip"
	        		android:layout_height="wrap_content"
	        		/>
	        		
	        <Button android:id="@+id/new_advance_scene_cancel_btn"
                android:text="@string/btn_cancel"
	        		android:layout_width="150dip"
	        		android:layout_height="wrap_content"
	        		/>
	        		    
	</LinearLayout>      
    	
</LinearLayout>
