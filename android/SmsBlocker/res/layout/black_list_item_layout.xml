<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/vw2" android:layout_width="fill_parent"
	android:layout_height="50dip" android:orientation="horizontal"
	android:gravity="center_vertical" android:background="@drawable/list_item_bg">

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="right">

		<ImageView android:id="@+id/black_list_item_sb_img"
			android:layout_width="32dip" android:layout_height="32dip"
			android:layout_gravity="right" android:paddingLeft="5dip" />
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="left">

		<TextView android:id="@+id/black_list_item_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:lines="1"
			android:layout_marginLeft="20dip" />

		<TextView android:id="@+id/black_list_item_text1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:lines="1"
			android:layout_marginLeft="20dip" />
	</LinearLayout>

</LinearLayout>