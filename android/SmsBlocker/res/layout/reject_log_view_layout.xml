<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="@drawable/background"
	android:gravity="center_horizontal">

	<TextView android:id="@+id/empty_record_text"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:textSize="14sp" android:textColor="@color/white"
		android:text="@string/empty_blocked_records" android:textStyle="normal"
		android:gravity="center" />



	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:padding="10dip" android:layout_weight="1.0">

		<ListView android:id="@+id/reject_log_list"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:cacheColorHint="@color/transparent" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="45dip" android:orientation="vertical"
		android:gravity="center_horizontal|bottom">

		<ImageView android:id="@+id/default_logo_image_view"
			android:layout_width="85dip" android:layout_height="35dip"
			android:src="@drawable/default_logo" />


	</LinearLayout>

</LinearLayout>