<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.angelstone.android.phonetools.ui" android:versionCode="1"
	android:versionName="1.0">
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<activity android:name=".ui.BlackListView" android:label="@string/app_name"
			android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.AddFromContactView"
			android:label="@string/app_name" android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".ui.AddFromCallLogView"
			android:label="@string/app_name" android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".ui.AddFromSmsRecordView"
			android:label="@string/app_name" android:configChanges="keyboardHidden|orientation" />
		<activity android:name=".ui.AddBlackListNumberView"
			android:label="@string/app_name" android:windowSoftInputMode="stateHidden|adjustResize" />

		<activity android:name=".ui.InputNumberView"
			android:label="@string/input_number_dlg_title_string" android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".ui.EditNumberView" android:label="@string/app_name"
			android:windowSoftInputMode="stateHidden|adjustResize" />
		<activity android:name=".ui.SelectedNumberListView"
			android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".ui.ClearWaitingDialog"
			android:theme="@android:style/Theme.Dialog" android:configChanges="keyboardHidden|orientation" />

		<activity android:name=".ui.CropImage" android:process=":CropImage"
			android:configChanges="orientation|keyboardHidden" android:label="@string/crop_label">
		</activity>
	</application>

	<uses-sdk android:minSdkVersion="4" />
</manifest> 